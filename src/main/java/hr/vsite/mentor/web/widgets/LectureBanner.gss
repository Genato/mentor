.view {
	margin: 20px;
	padding: 20px;
}

.title {
	font-size: 5em;
	line-height: 110%;
	overflow: hidden;
}
@media only screen and (min-width: 601px) {
	.title {
		margin: 10px;
	}
}

.image {
	max-height: 150px;
	float: right;
	margin: 10px;
	border: grey 1px solid;
}

.caption {
	text-align: left;
}
@media only screen and (min-width: 601px) {
	.caption {
		text-align: right;
	}
}

